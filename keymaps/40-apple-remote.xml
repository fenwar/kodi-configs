<keymap>

    <!--
        The 7 buttons on the Apple remote are automatically mapped to
        the following keycodes by libinput:

        Up          115     KEY_VOLUMEUP
        Down        114     KEY_VOLUMEDOWN
        Left        158     KEY_BACK
        Right       159     KEY_FORWARD
        Enter       28      KEY_ENTER
        Menu        139     KEY_MENU
        Play/Pause  164     KEY_PLAYPAUSE
    -->

    <global>
        <keyboard>
            <key id="115">Up</key>
            <key id="114">Down</key>
            <key id="158">Left</key>
            <key id="159">Right</key>
            <key id="28">Select</key>
            <key id="139">ContextMenu</key>
            <key id="164">PlayPause</key>
            <key mod="longpress" id="115">VolumeUp</key>
            <key mod="longpress" id="114">VolumeDown</key>
            <key mod="longpress" id="158">Rewind</key>
            <key mod="longpress" id="159">FastForward</key>
            <key mod="longpress" id="28">ActivateWindow(shutdownmenu)</key>
            <key mod="longpress" id="139">PreviousMenu</key>
            <key mod="longpress" id="164">Stop</key>
        </keyboard>
    </global>

    <fullscreenvideo>
        <keyboard>
            <key id="115">Up</key>
            <key id="114">Down</key>
            <key id="158">Left</key>
            <key id="159">Right</key>
            <key id="28">Select</key>
            <key id="139">ContextMenu</key>
            <key id="164">PlayPause</key>
            <key mod="longpress" id="115">VolumeUp</key>
            <key mod="longpress" id="114">VolumeDown</key>
            <key mod="longpress" id="158">Rewind</key>
            <key mod="longpress" id="159">FastForward</key>
            <key mod="longpress" id="28">ActivateWindow(osdsubtitlesettings)</key>
            <key mod="longpress" id="139">PreviousMenu</key>
            <key mod="longpress" id="164">Stop</key>
        </keyboard>
    </fullscreenvideo>

