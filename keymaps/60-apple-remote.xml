<keymap>

    <!--
        The 7 buttons on the Apple remote are automatically mapped to
        the following keycodes by libinput:

        Up          115     KEY_VOLUMEUP        volume_up
        Down        114     KEY_VOLUMEDOWN      volume_down
        Left        158     KEY_BACK            browser_back
        Right       159     KEY_FORWARD         browser_forward
        Enter       28      KEY_ENTER           return
        Menu        139     KEY_MENU            key id=61952
        Play/Pause  164     KEY_PLAYPAUSE       play_pause
    -->

    <global>
        <keyboard>
            <volume_up>Up</volume_up>
            <volume_up mod="longpress"></volume_up>
            <volume_down>Down</volume_down>
            <volume_down mod="longpress"></volume_down>
            <browser_back>Left</browser_back>
            <browser_back mod="longpress"></browser_back>
            <browser_forward>Right</browser_forward>
            <browser_forward mod="longpress"></browser_forward>
            <return>Select</return>
            <return mod="longpress">ContextMenu</return>
            <key id="61952">PreviousMenu</key>
            <key id="61952" mod="longpress">ActivateWindow(ShutdownMenu)</key>
            <play_pause>PlayPause</play_pause>
            <play_pause mod="longpress">Stop</play_pause>
        </keyboard>
    </global>

    <Home>
        <keyboard>
            <key id="61952">Close</key>
            <key id="61952" mod="longpress">ActivateWindow(ShutdownMenu)</key>
        </keyboard>
    </Home>

    <ContextMenu>
        <keyboard>
            <key id="61952">Back</key>
        </keyboard>
    </ContextMenu>

    <ShutdownMenu/>

    <FullscreenVideo>
        <keyboard>
            <volume_up>subtitledelay</volume_up>
            <volume_up mod="longpress">ActivateWindow(osdsubtitlesettings)</volume_up>
            <volume_down>audiodelay</volume_down>
            <volume_down mod="longpress">ActivateWindow(OSDAudioSettings)</volume_down>
            <browser_back>StepBack</browser_back>
            <browser_back mod="longpress"></browser_back>
            <browser_forward>StepForward</browser_forward>
            <browser_forward mod="longpress"></browser_forward>
            <return>OSD</return>
            <return mod="longpress">CreateBookmark</return>
            <key id="61952">PreviousMenu</key>
            <key id="61952" mod="longpress">ActivateWindow(ShutdownMenu)</key>
            <play_pause>PlayPause</play_pause>
            <play_pause mod="longpress">Stop</play_pause>
        </keyboard>
    </FullscreenVideo>

    <sliderdialog>
        <!-- used for the audio/subtitle delay -->
        <keyboard>
            <volume_up>Back</volume_up>
            <volume_down>Back</volume_down>
            <browser_back>Left</browser_back>
            <browser_back mod="longpress"></browser_back>
            <browser_forward>Right</browser_forward>
            <browser_forward mod="longpress"></browser_forward>
        </keyboard>
    </sliderdialog>

    <VirtualKeyboard>
        <keyboard>
            <browser_back>Left</browser_back>
            <browser_back mod="longpress"></browser_back>
        </keyboard>
    </VirtualKeyboard>

