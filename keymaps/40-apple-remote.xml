<keymap>

    <!--
        The 7 buttons on the Apple remote are automatically mapped to
        the following keycodes by libinput:

        Up          115     KEY_VOLUMEUP
        Down        114     KEY_VOLUMEDOWN
        Left        158     KEY_BACK
        Right       159     KEY_FORWARD
        Enter       28      KEY_ENTER
        Menu        139     KEY_MENU
        Play/Pause  164     KEY_PLAYPAUSE
    -->

    <global>
        <keyboard>
            <volume_up>Up</volume_up>
            <volume_down>Down</volume_down>
            <browser_back>Left</browser_back>
            <browser_forward>Right</browser_forward>
            <return>Select</return>
            <key id="61952">ContextMenu</key>
            <key id="61952" mod="longpress">PreviousMenu</key>
            <play_pause>PlayPause</play_pause>
        </keyboard>
    </global>

    <home>
        <keyboard>
        </keyboard>
    </home>

    <fullscreenvideo>
        <keyboard>
            <browser_back mod="longpress">Rewind</browser_back>
            <browser_forward mod="longpress">FastForward</browser_forward>
            <return mod="longpress">ActivateWindow(osdsubtitlesettings)</return>
        </keyboard>
    </fullscreenvideo>

